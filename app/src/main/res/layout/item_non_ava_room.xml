<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="8dp"
    android:layout_marginBottom="16dp"
    android:id="@+id/item_id">


    <TextView
        android:id="@+id/tv_show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        tools:text="8:00 - 12:00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_booking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        tools:text="Booked by Eveeeeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_show_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_show_time" />

    <TextView
        android:id="@+id/tv_user_booking_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Tel. 081-123123"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user_booking_name"
        app:layout_constraintStart_toEndOf="@+id/tv_user_booking_name"
        app:layout_constraintTop_toTopOf="@+id/tv_user_booking_name" />

</androidx.constraintlayout.widget.ConstraintLayout>